          async function executeSQLWithPayload(query, payload, binding) {
            // Call server-side executor which resolves templates using the canonical bridge
            try {
              // If binding provided, pass its eventName to server for accurate resolution
              const eventName =
                binding && binding.eventName ? binding.eventName : null;

              const resp = await fetch("/api/event/execute", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                  query: query,
                  eventName: eventName,
                  payload: payload,
                }),
                timeout: 60000,
              });

              // Read raw text so we can inspect executedQuery on errors
              const raw = await resp.text().catch(() => "");
              let j = null;
              try { j = raw ? JSON.parse(raw) : null; } catch (e) { j = null; }

              if (!resp.ok) {
                const details = j && j.details ? j.details : raw;
                const err = new Error(`Execution failed: ${resp.status} ${details}`);
                err.executedQuery = j && (j.executedQuery || j.query) ? (j.executedQuery || j.query) : null;
                throw err;
              }

              if (j && j.ok === false) {
                const err = new Error(j.error || "Execution failed");
                err.executedQuery = j.executedQuery || j.query || null;
                throw err;
              }

              const data = Array.isArray(j && j.data ? j.data : null)
                ? j.data
                : (j && j.data && j.data.rows) || [];
              return {
                processedQuery: (j && j.query) || query,
                data: data,
                rowCount: (j && j.rowCount) || (data || []).length,
              };
            } catch (e) {
              throw e;
            }
          }

          // Resolve variables in query using bound event schemas and payload values.
          // Supports {{FULL_EVENT_NAME.field.path}} where field.path may include dots (e.g. actor.user or detail.email)
          function resolveQueryWithBindings(query, payload, binding) {
            if (!query) return query;
            const paramRegex = /\{\{([^\.\}]+)\.([^}]+)\}\}/g;

            return query.replace(paramRegex, (match, eventName, fieldPath) => {
              // Find the binding that matches the eventName exactly
              let sourceBinding = eventBindings.find(
                (b) => b.eventName === eventName || b.eventId === eventName
              );

              // If not found and a binding was provided, prefer that
              if (
                !sourceBinding &&
                binding &&
                (binding.eventName === eventName ||
                  binding.eventId === eventName)
              ) {
                sourceBinding = binding;
              }

              // Fallback: if only one binding exists, use it
              if (!sourceBinding && eventBindings.length === 1)
                sourceBinding = eventBindings[0];

              if (!sourceBinding) {
                throw new Error(
                  `No event binding found for ${eventName} (used in ${match})`
                );
              }

              // Resolve value from provided payload first
              let value = getValueFromPayload(payload, fieldPath);

              // If not found in payload, try schema sample values
              if (value === undefined || value === null) {
                const primary =
                  sourceBinding.payloadSchema?.primaryFields || {};
                const meta = sourceBinding.payloadSchema?.metadataFields || {};
                // Try primary fields then metadata fields
                if (
                  primary[fieldPath] &&
                  primary[fieldPath].sample !== undefined
                )
                  value = primary[fieldPath].sample;
                else if (
                  meta[fieldPath] &&
                  meta[fieldPath].sample !== undefined
                )
                  value = meta[fieldPath].sample;
              }

              if (value === undefined) {
                throw new Error(
                  `Missing field "${fieldPath}" in event payload (looking for ${match})`
                );
              }

              if (typeof value === "string")
                return `'${value.replace(/'/g, "''")}'`;
              if (typeof value === "number") return value;
              if (value === null) return "NULL";
              return `'${JSON.stringify(value)}'`;
            });
          }

          function getValueFromPayload(payload, fieldPath) {
            if (!payload) return undefined;
            const parts = fieldPath.split(".");
            // Try direct nesting first
            let v = payload;
            for (const p of parts) {
              if (v && Object.prototype.hasOwnProperty.call(v, p)) v = v[p];
              else {
                v = undefined;
                break;
              }
            }
            if (v !== undefined) return v;

            // Fallback checks: top-level, detail, data
            // if fieldPath refers to a single property name
            if (parts.length === 1) {
              const key = parts[0];
              if (payload && Object.prototype.hasOwnProperty.call(payload, key))
                return payload[key];
              if (
                payload &&
                payload.detail &&
                Object.prototype.hasOwnProperty.call(payload.detail, key)
              )
                return payload.detail[key];
              if (
                payload &&
                payload.data &&
                Object.prototype.hasOwnProperty.call(payload.data, key)
              )
                return payload.data[key];
            }

            // Try nested inside detail/data
            v = payload && payload.detail ? payload.detail : undefined;
            if (v) {
              let tmp = v;
              for (const p of parts) {
                if (tmp && Object.prototype.hasOwnProperty.call(tmp, p))
                  tmp = tmp[p];
                else {
                  tmp = undefined;
                  break;
                }
              }
              if (tmp !== undefined) return tmp;
            }

            v = payload && payload.data ? payload.data : undefined;
            if (v) {
              let tmp = v;
              for (const p of parts) {
                if (tmp && Object.prototype.hasOwnProperty.call(tmp, p))
                  tmp = tmp[p];
                else {
                  tmp = undefined;
                  break;
                }
              }
              if (tmp !== undefined) return tmp;
            }

            return undefined;
          }

