            container.innerHTML = `
              <div style="font-size: 0.85rem; color: #2c3e50; margin-bottom: 8px;">
                <strong>Detected Parameters:</strong>
              </div>
              ${params
                .map((param) => {
                  // param is now {eventName, fieldName, fullMatch}
                  const eventName = param.eventName;
                  const fieldName = param.fieldName;

                  // Find which event binding this refers to (match by full event name)
                  let sourceEvent = null;
                  let fieldInfo = null;
                  let isPrimary = false;
                  let isValid = false;

                  for (const binding of eventBindings) {
                    // Match by full event name
                    const bindingName = binding.eventName;

                    if (
                      bindingName === eventName ||
                      binding.eventName === eventName ||
                      eventName === "event"
                    ) {
                      // Found the event, now check if field exists
                      if (binding.payloadSchema?.primaryFields?.[fieldName]) {
                        sourceEvent = binding;
                        fieldInfo =
                          binding.payloadSchema.primaryFields[fieldName];
                        isPrimary = true;
                        isValid = true;
                        break;
                      } else if (
                        binding.payloadSchema?.metadataFields?.[fieldName]
                      ) {
                        sourceEvent = binding;
                        fieldInfo =
                          binding.payloadSchema.metadataFields[fieldName];
                        isPrimary = false;
                        isValid = true;
                        break;
                      }
                    }
                  }

                  const sampleDisplay =
                    fieldInfo?.sample !== undefined &&
                    fieldInfo?.sample !== null
                      ? typeof fieldInfo.sample === "object"
                        ? JSON.stringify(fieldInfo.sample).substring(0, 40)
                        : String(fieldInfo.sample).substring(0, 40)
