          // ====== ENHANCED AI & REAL EVENT TESTING SYSTEM ======

          async function testWithRealEvents() {
            if (eventBindings.length === 0) {
              showToast("Please bind at least one event first", "info");
              return;
            }

            const query = document.getElementById("action-query").value;
            if (!query) {
              showToast("Please enter a SQL query first", "error");
              return;
            }

            const resultsArea = document.getElementById("test-results-area");
            resultsArea.innerHTML =
              '<div style="color: #657786;">‚è≥ Fetching real event data...</div>';

            try {
              // Fetch real events for each bound event
              const realEventSamples = [];

              for (const binding of eventBindings) {
                // Prefer using the bound event name for fetching real records.
                // binding.eventName is the full event identifier (e.g. module:entity:field:action)
                const moduleFromName =
                  (binding.eventName && binding.eventName.split(":")[0]) ||
                  (binding.payloadSchema &&
                    binding.payloadSchema.metadataFields &&
                    binding.payloadSchema.metadataFields.module &&
                    binding.payloadSchema.metadataFields.module.sample) ||
                  "misc";
                const eventNameParam = binding.eventName || binding.eventId;

                const response = await fetch(
                  `/api/event-records?module=${encodeURIComponent(
                    moduleFromName
                  )}&event=${encodeURIComponent(eventNameParam)}`
                );

                if (response.ok) {
                  const data = await response.json();
                  const records = data && data.records ? data.records : [];

                  // Get up to 3 random samples
                  const samples = [];
                  const maxSamples = Math.min(3, records.length);
                  for (let i = 0; i < maxSamples; i++) {
                    const randomIndex = Math.floor(
                      Math.random() * records.length
                    );
                    samples.push(records[randomIndex]);
                  }

                  realEventSamples.push({
                    binding: binding,
                    samples: samples,
                  });
                }
              }

