              return { type: selectedTaxItem.type, item: selectedTaxItem.item };
            }
            if (activeTab === "rules") {
              if (!selectedRuleSet) return null;
              return { type: "rules", item: selectedRuleSet };
            }
            return null;
          },
          confirmText: "Use Selection",
          cancelText: "Close",
